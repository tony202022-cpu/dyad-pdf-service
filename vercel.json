{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" }
  ],
  "functions": {
    "api/generate-pdf.js": {
      "maxDuration": 60,
      "memory": 2048
    }
  },
  "routes": [
    { "src": "/api/health", "dest": "/api/health.js" },
    { "src": "/api/generate-pdf", "dest": "/api/generate-pdf.js" }
  ]
}
